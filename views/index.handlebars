<!-- burgers to devour -->
<div class="row mt-3">
    <div class="col-6">
        <h3>Burgers to Devour</h3>
        <ul class="list-group" id="burgers">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <!-- devoured burgers-->
    <div class="col-6">
        <h3>Devoured Burgers</h3>
        <ul class="list-group bg-secondary" id="burgers-devoured">
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/devoured devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
{{!-- form for entering new burgers --}}
<div class="row justify-content-center mt-3">
    <div class="col-6">
        <form class="create-form">
            <div class="form-group">
                <label for="new-burger-text-area">Enter New Burger</label>
                <textarea class="form-control" id="new-burger" rows="3" name="burgername"></textarea>
            </div>
            <!-- button for adding new burgers-->
            <button type="submit" class="btn btn-primary" id="add-burger-button">Add Burger</button>
        </form>
    </div>
</div>