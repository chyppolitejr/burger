<!-- burgers to devour -->
<div class="row mt-3">
    <div class="col-6">
        <h3>Burgers to Devour</h3>
        <ul class="list-group" id="burgers">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <!-- devoured burgers-->
    <div class="col-6">
        <h3>Devoured Burgers</h3>
        <ul class="list-group" id="burgers-devoured">
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>